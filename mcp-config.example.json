{
  "mcpServers": {
    "pixelhub": {
      "url": "http://localhost:8080/mcp/v1",
      "headers": {
        "Authorization": "Bearer your-secret-api-key-here"
      },
      "description": "PixelHub 图床服务 - 提供智能图片搜索功能",
      "tools": [
        {
          "name": "list_tags",
          "endpoint": "/tags",
          "description": "获取所有可用的图片标签列表",
          "parameters": {
            "page": "页码（默认 1）",
            "limit": "每页数量（默认 100）"
          }
        },
        {
          "name": "search_images",
          "endpoint": "/search/relevance",
          "description": "根据标签搜索图片，返回按相关性排序的结果",
          "parameters": {
            "tags": "标签列表（用逗号分隔）",
            "page": "页码（默认 1）",
            "limit": "返回数量（默认 20）"
          }
        }
      ]
    }
  }
}

